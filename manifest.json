{
  "manifest_version": 2,

  "name": "Boring Colors",
  "description": "This extension rids the internet of eye-popping colors and makes it a world of boring gray.",
  "version": "0.1.0",

  "browser_action": {
    "TODO_default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["content_styles.css"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
