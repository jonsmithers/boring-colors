{
  "manifest_version": 2,

  "name": "Boring Colors",
  "description": "Rid the internet of eye-popping colors and transform it into a drab world of sprawling grays.",
  "version": "0.1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16":  "./img/logo_16.png",
    "32":  "./img/logo_32.png",
    "128": "./img/logo_128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["content_styles.css"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "storage"
  ]
}
