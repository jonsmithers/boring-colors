{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
            2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "0",
      "single"
    ],
    "no-undef": [
      0
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}